{
  "name": "camunda-engine-mcp",
  "version": "1.0.0",
  "description": "MCP Server for Camunda Platform REST API - enables AI assistants to interact with Camunda workflow engine",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "camunda-mcp": "build/index.js",
    "camunda-mcp-health": "build/health-check.js"
  },
  "scripts": {
    "start": "node build/index.js",
    "build": "tsc && chmod 755 build/index.js && chmod 755 build/health-check.js",
    "health-check": "node build/health-check.js",
    "typecheck": "tsc --noEmit",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "docker:build": "docker build -t camunda-engine-mcp .",
    "docker:run": "docker run -d --name camunda-mcp-server camunda-engine-mcp",
    "prepare": "husky install",
    "validate": "npm run typecheck && npm run lint && npm run test:all",
    "ci": "npm run validate && npm run build"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "mcp",
    "camunda",
    "bpmn", 
    "workflow",
    "ai",
    "assistant",
    "model-context-protocol",
    "process-automation"
  ],
  "author": "Camunda MCP Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/camunda-engine-mcp.git"
  },
  "homepage": "https://github.com/your-org/camunda-engine-mcp#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.3",
    "axios": "^1.9.0",
    "form-data": "^4.0.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/node": "^22.15.2",
    "@types/jest": "^29.5.12",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "supertest": "^6.3.4",
    "nock": "^13.5.4",
    "typescript": "^5.8.3",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2"
  }
}